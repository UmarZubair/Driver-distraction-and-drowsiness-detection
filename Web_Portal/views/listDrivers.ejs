    <style>
        a:hover {
            color: #337ab7;
        }

        /* The Modal (background) */
        .customModal {
            display: none;
            position: fixed;
            z-index: 1;
            padding-top: 200px;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            /* Full height */
            overflow: auto;
            /* Enable scroll if needed */
            background-color: rgb(0, 0, 0);
            /* Fallback color */
            background-color: rgba(0, 0, 0, 0.4);
            /* Black w/ opacity */
            font-family: Helvetica, Arial, sans-serif;
        }

        /* Modal Content */
        .customModal-content {
            font-family: Roboto, Helvetica, Arial, sans-serif;
            position: relative;
            background-color: #fefefe;
            margin: auto;
            padding: 0;
            border: 1px solid #888;
            width: 40%;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            -webkit-animation-name: animatetop;
            -webkit-animation-duration: 0.4s;
            animation-name: animatetop;
            animation-duration: 0.4s
        }

        @media only screen and (max-width: 600px) {
            .customModal-content {
                width: 90%;
            }
        }

        /* Add Animation */
        @-webkit-keyframes animatetop {
            from {
                top: -300px;
                opacity: 0
            }

            to {
                top: 0;
                opacity: 1
            }
        }

        @keyframes animatetop {
            from {
                top: -300px;
                opacity: 0
            }

            to {
                top: 0;
                opacity: 1
            }
        }

        #confirmRouterDel .customModal-header {
            padding: 10px 16px;
            background-color: #fc4040;
            color: white;
        }

        .customModal-body {
            font-size: 16px;
            padding: 2px 16px;
        }

        .customModal-footer {
            padding: 21px 16px;
            background-color: #F8FCF7;
            text-align: right;
        }

        #confirmRouterDel .modalBtn {
            text-decoration: none;
            background-color: #fc4040;
            color: white;
            padding: 10px 30px;
            border-radius: 4px;
            cursor: pointer;
            border: 0px;
        }

        #confirmRouterDel .modalBtn:hover {
            background-color: #fc4040;
            box-shadow: 2px 5px 5px #EDF2ED;
        }

        #main-menu>li.active>a,
        #main-menu>li.active>a:focus,
        #main-menu>li.active>a:hover {
            color: #ffffff;
            cursor: pointer;
            background-color: #fc4040;
            border: 1px solid #fc4040;
            border-bottom-color: transparent;
        }
    </style>
    <script>
        function create(rid) {
            $('#confirmRouterDel').css('display', 'block');
            var elem = document.getElementById("YesBtn");
            var att = document.createAttribute("onclick");
            att.value = "$.ajax({ url: '/crud/delDriver/?id=" + rid + "', method: 'delete',}) .done(function() { console.log('deleted');  window.location.reload(true); });";
            elem.setAttributeNode(att);
        }
    </script>
